<%- include('../includes/head', { pageTitle: 'Signup' }) %>
</head>
<body>
    <%- include("../includes/header") %>
    <main>
      <h1>Create New Account</h1>
      <form action="" method="">
            <div>
                <label for="email">이메일 입력</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div>
                <label for="confirm-email">이메일 확인</label>
                <input type="email" id="confirm-email" name="confirm-email" required>
            </div>
            <div>
                <label for="password">비밀번호</label>
                <input type="password" id="password" name="password" minlength="6" required>
            </div>
            <hr>
            <div>
                <label for="street">주소</label>
                <input type="text" id="street" name="street" required>
            </div>
            <div>
                <label for="postal">우편번호</label>
                <input 
                    type="text" 
                    id="postal" 
                    name="postal" 
                    minlength="5" 
                    maxlength="5" 
                    required>
            </div>
            <div>
                <label for="city">국가</label>
                <input type="text" id="city" name="city" required>
            </div>
            <button class="btn">가입</button>
            <p id="switch-form"><a href="/login">Login instead</a></p>
        </form>
    </main>
<%- include("../includes/footer") %>